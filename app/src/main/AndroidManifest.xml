<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tr.edu.yildiz.ahmetbarisyerlikaya">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AhmetBarisYerlikaya">
        <activity android:name=".activities.SelectQuestionsActivity"></activity>
        <activity android:name=".activities.EditQuestionActivity" />
        <activity android:name=".activities.CreateExamActivity" />
        <activity android:name=".activities.ExamSettingsActivity" />
        <activity android:name=".activities.AddQuestionActivity" />
        <activity android:name=".activities.QuestionsActivity" />
        <activity android:name=".activities.MenuActivity" />
        <activity android:name=".activities.SignUpActivity" />
        <activity android:name=".activities.SignInActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>