<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddQuestionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:visibility="gone" />

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/playButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_baseline_play_arrow_24" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/pauseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:enabled="false"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_baseline_pause_24" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/stopButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:enabled="false"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_baseline_stop_24" />
            </LinearLayout>

            <Button
                android:id="@+id/attachMediaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/darker_gray"
                android:text="ATTACH MEDIA"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/questionInfoField"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Information"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/questionTextField"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Question Text"
                android:inputType="textMultiLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/optionARadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxHeight="48dp"
                            android:minHeight="48dp" />

                        <RadioButton
                            android:id="@+id/optionBRadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxHeight="48dp" />

                        <RadioButton
                            android:id="@+id/optionCRadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxHeight="48dp" />

                        <RadioButton
                            android:id="@+id/optionDRadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxHeight="48dp" />

                        <RadioButton
                            android:id="@+id/optionERadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxHeight="48dp" />

                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/optionATextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Option A"
                        android:inputType="textPersonName"
                        android:maxHeight="48dp"
                        android:minHeight="48dp" />

                    <EditText
                        android:id="@+id/optionBTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Option B"
                        android:inputType="textPersonName"
                        android:maxHeight="48dp" />

                    <EditText
                        android:id="@+id/optionCTextField"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:hint="Option C"
                        android:inputType="textPersonName"
                        android:maxHeight="48dp"
                        android:minHeight="48dp" />

                    <EditText
                        android:id="@+id/optionDTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Option D"
                        android:inputType="textPersonName"
                        android:maxHeight="48dp"
                        android:minHeight="48dp" />

                    <EditText
                        android:id="@+id/optionETextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Option E"
                        android:inputType="textPersonName"
                        android:maxHeight="48dp"
                        android:minHeight="48dp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/addQuestionSubmitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBMIT" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>